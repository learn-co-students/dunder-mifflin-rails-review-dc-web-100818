<h1> NEW EMPLOYEE FORM </h1>

<%= form_for @employee do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br /><br />

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br /><br />

  <%= f.label :alias %>
  <%= f.text_field :alias %>
  <br /><br />

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /><br />

  <%= f.label :office %>
  <%= f.text_field :office %>
  <br /><br />

  <%= f.label :img_url, "Link to Image" %>
  <%= f.text_field :img_url %>
  <br /><br />

  <%= f.collection_select :dog_id, Dog.all, :id, :name, prompt: "Please select a dog" %>
  <br /><br />

  <%= f.submit %>

<% end %>
